{

  "name"             : "Myfav.es",
  "version"          : "0.1",
  "description"      : "Myfav.es is an elegant start page replacement for your browser.",
  "manifest_version" : 2,
  "default_locale"   : "en",
  // "update_url": "http://myhost.com/mytestextension/updates.xml"
  
  "icons": {
    "16"  : "icons/icon16.png",
    "48"  : "icons/icon48.png",
    "128" : "icons/icon128.png"
  },

  "permissions": [
    "http://*.myfav.es/",
    "cookies",
    "contextMenus",
    // maybe
    "topSites",
    "bookmarks",
    "history",
    "unlimitedStorage"
  ],

  // http://developer.chrome.com/extensions/contentSecurityPolicy.html
  "content_security_policy": "script-src http://*.myfav.es; object-src 'self'",

  // http://code.google.com/chrome/extensions/background_pages.html
  "background_page" : "background.html",
  "options_page"    : "src/options.html",

  "chrome_url_overrides" : {
    "pageToOverride": "src/myfaves.html"
  },

  // http://code.google.com/chrome/extensions/content_scripts.html
  "content_scripts": [
    {
      "matches" : ["http://*.myfav.es"],
      "css"     : ["src/save.css"],
      "js"      : ["lib/jquery.js", "src/save.js", "src/scrape.js"]
    }
  ],

  "browser_action": {
    "default_icon"  :  "icons/icon19.png",
    "default_title" : "Add site to myfav.es"
  }

}
